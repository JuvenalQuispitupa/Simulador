<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juvenalquisptitupayupa.simulador.FormularioPatron">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"        >

        <EditText
            android:id="@+id/et_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            android:inputType="textCapCharacters"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_secuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Secuencia"
            android:inputType="number"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor"
            android:inputType="numberSigned"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_accion"
            android:text="Accion Agregar/Modificar"/>
    </LinearLayout>


</RelativeLayout>
